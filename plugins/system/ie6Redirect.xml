<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="system">
        <name>IE6 Redirect</name>
        <author>Jonathan Bennett</author>
        <creationDate>July 2010</creationDate>
        <copyright></copyright>
        <license></license>
        <authorEmail></authorEmail>
        <authorUrl></authorUrl>
        <version></version>
        <description>Redirect the user to a dedicated IE6 sucks page. Create a ie6.php file in your template to style given page.</description>
        
        <files>
                <filename plugin="ie6Redirect">ie6Redirect</filename>
        </files>
        
        <params>
        <param type="radio" name="redirect" label="Redirect or warn?">
        	<option value="redirect">Redirect</option>
        	<option value="warn">Warn</option>
        </param>
        </params>
</install>